        <!-- Left Side Bar -->
        <div class="large-3 small-3 columns">
          <div class="sidebar">
            <nav>
              <h5>Go To</h5>
              <ul class="side-nav">
                <li><a href="#">Some Link</a></li>
                <li><a href="#">Another Link</a></li>
              </ul>
            </nav>
          </div>
        </div>

        <!-- Center Content -->
        <div class="large-6 small-6 columns">
          <%= yield %>
        </div>

        <!-- Right Side Bar -->
        <div class="large-3 small-3 columns">
          <!-- TODO: Something here -->
        </div>
      </div>
    </section>

    <%= javascript_include_tag "application" %>
