<h1 id="hallo-title" class="dotted editor">
  <%= raw(title) %>
</h1>

<div id="hallo-editor-parent">
  <div id="hallo-editor" class="dotted editor">
    <%= raw(body) %>
  </div>
  <br />
</div>

<a href="#"  id="preview-button" class="button">Toggle Preview</a>
<%= form_for(@post, :html => { :style => 'display:inline;' }) do |f| %>
  <%= f.hidden_field :title, :id => 'h-title-field', :value => title %>
  <%= f.hidden_field :body , :id => 'h-body-field', :value => body %>

  <%= f.submit :value => 'Save Post', :class => 'button success' %>
<% end %>